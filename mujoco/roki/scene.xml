<mujoco model="roki scene">
  <compiler angle="radian" meshdir="assets" texturedir="assets" autolimits="true"/>

  <option integrator="RK4"/>

  <include file="roki.xml" />

  <statistic center="0 0 0.1" extent="1.1"/>

   <visual>
    <!-- <map force="0.1" zfar="30"/> -->
    <rgba haze="0.15 0.25 0.35 1"/>
    <quality shadowsize="2048"/>
    <global offwidth="800" offheight="800"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.7 0.5 1" rgb2="0.3 0.5 1" width="10"
        height="20"/>
    <texture type="2d" name="groundplane" builtin="gradient" mark="edge" rgb1="0.2 0.9 0.4"
        rgb2="0.1 0.8 0.1" markrgb="0.1 0.8 0.1" width="10" height="10"/>
    <material name="groundplane" texture="groundplane" texrepeat="1 1"
        reflectance="0"/>
  </asset>

  <worldbody>
    <body pos="0 -0.2 0">
        <joint type="free"/>
        <geom name="sphere_geom" size="0.05" type="sphere" rgba="1 0 0 1" condim = "4" friction = "0.001 0.001 0.005"/>
    </body>
    <light pos="0 0 7" dir="0 0 -1"  directional="false"/>
    <geom name="floor"  pos="0 0 -0.001" type="box" size="1.5 2 0.001"  material="groundplane" conaffinity="1000" condim="6"/>
    <body  name="cor" pos="1.5 0 0.1">
    <geom type="box" size="0.05 2 0.2" />
    </body>
    <body  name="cor1" pos="-1.5 0 0.1">
    <geom type="box" size="0.05 2 0.2" />
    </body>
    <body  name="cor2" pos="0 2 0.1">
    <geom type="box" size="1.5 0.05 0.2" />
    </body>
    <body  name="cor3" pos="0 -2 0.1">
    <geom type="box" size="1.5 0.05 0.2" />
    </body>
  </worldbody>

</mujoco>
